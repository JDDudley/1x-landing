primary-color = #3e3c39

input::-ms-clear, textarea::-ms-clear
  display: none

header[role=banner]
  height: 50px
  display: flex
  justify-content: space-between

  background: primary-color
  .x-logo
    color: #fff
    display: flex
    text-align: center
  .xtac-logo
    background: url("1x-logo.png") center center no-repeat
    background-size: contain
    background-color: #efefef
    width: 100px
    height: 50px
    display: inline-block
  .xtac-text
    display: inline-block
    margin-left: 15px
    h2
      margin-bottom: 0
    h6
      margin-top: 0
      font-size: 12.5px
    a
      color: #fff
      text-decoration: none

.main-nav
  float: right
  width: 44px
  height: 100%
  background: url("auth/cd-icon-menu.svg") no-repeat center center
  cursor: pointer
  ul
    margin-right: 15px
    position: absolute
    list-style: none
    padding: 0
    top: 0
    left: 0
    width: 100%
    transform: translateY(-100%)
    &.is-visible
      transform: translateY(80px)
  a
    display: block
    height: 50px
    line-height: 50px
    padding-left: 5%
    background: #292a34
    border-top: 1px solid #3b3d4b
    color: #FFF

@media only screen and (min-width: 768px)
  .main-nav
    width: auto
    height: auto
    background: none
    cursor: auto
    ul
      position: static
      width: auto
      -webkit-transform: translateY(0)
      -moz-transform: translateY(0)
      -ms-transform: translateY(0)
      -o-transform: translateY(0)
      transform: translateY(0)
      line-height: 80px
      &.is-visible
        -webkit-transform: translateY(0)
        -moz-transform: translateY(0)
        -ms-transform: translateY(0)
        -o-transform: translateY(0)
        transform: translateY(0)
    li
      display: inline-block
      margin-left: 1em
      &:nth-last-child(2)
        margin-left: 2em
    a
      display: inline-block
      height: auto
      line-height: normal
      background: transparent
      &.x-signin
        padding: .6em 1em
        border: 1px solid rgba(255, 255, 255, 0.6)
      &.x-signup
        padding: .6em 1em
        border: 1px solid rgba(255, 255, 255, 0.6)
        background: #116CAE
        border: none

